#include <stdio.h>

#define TAM_TABULEIRO 10   // tamanho fixo do tabuleiro
#define TAM_NAVIO 3        // tamanho fixo dos navios

int main() {
    int tabuleiro[TAM_TABULEIRO][TAM_TABULEIRO]; // matriz 10x10 representando o tabuleiro
    int i, j;

    // Coordenadas iniciais dos navios (linha e coluna).
    // Obs: Aqui os valores são definidos diretamente no código.
    int navio1_linha = 2, navio1_coluna = 4; // Navio horizontal começa em (2,4)
    int navio2_linha = 5, navio2_coluna = 7; // Navio vertical começa em (5,7)

    // Inicializar tabuleiro com água (valor 0)
    for (i = 0; i < TAM_TABULEIRO; i++) {
        for (j = 0; j < TAM_TABULEIRO; j++) {
            tabuleiro[i][j] = 0;
        }
    }

    // Posicionar navio horizontal (valor 3)
    // Validação para não ultrapassar os limites
    if (navio1_coluna + TAM_NAVIO <= TAM_TABULEIRO) {
        for (j = 0; j < TAM_NAVIO; j++) {
            tabuleiro[navio1_linha][navio1_coluna + j] = 3;
        }
    } else {
        printf("Erro: Navio 1 ultrapassa os limites do tabuleiro!\n");
        return 1;
    }

    // Posicionar navio vertical (valor 3)
    // Validação para não ultrapassar os limites
    if (navio2_linha + TAM_NAVIO <= TAM_TABULEIRO) {
        for (i = 0; i < TAM_NAVIO; i++) {
            // Verificar sobreposição
            if (tabuleiro[navio2_linha + i][navio2_coluna] == 3) {
                printf("Erro: Navio 2 sobrepõe o navio 1!\n");
                return 1;
            }
            tabuleiro[navio2_linha + i][navio2_coluna] = 3;
        }
    } else {
        printf("Erro: Navio 2 ultrapassa os limites do tabuleiro!\n");
        return 1;
    }

    // Exibir tabuleiro no console
    printf("\n=== TABULEIRO BATALHA NAVAL ===\n\n");
    for (i = 0; i < TAM_TABULEIRO; i++) {
        for (j = 0; j < TAM_TABULEIRO; j++) {
            printf("%d ", tabuleiro[i][j]); // imprime valores separados por espaço
        }
        printf("\n");
    }

    return 0;
}
